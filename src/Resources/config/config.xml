<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/platform/trunk/src/Core/System/SystemConfig/Schema/config.xsd">
    <card>
        <title>API Configuration</title>
        <title lang="de-DE">API-Konfiguration</title>
        
        <input-field type="password">
            <name>apiKey</name>
            <label>API Key</label>
            <label lang="de-DE">API-Schlüssel</label>
            <required>true</required>
        </input-field>
    </card>

    <card>
        <title>Update Settings</title>
        <title lang="de-DE">Update-Einstellungen</title>

        <input-field type="single-select">
            <name>updateInterval</name>
            <label>Price Update Interval</label>
            <label lang="de-DE">Preis-Update-Intervall</label>
            <helpText>Select how often prices should be updated automatically</helpText>
            <helpText lang="de-DE">Wählen Sie aus, wie oft die Preise automatisch aktualisiert werden sollen</helpText>
            <options>
                <option>
                    <id>300</id>
                    <name>Every 5 minutes - For shops with highly volatile prices</name>
                    <name lang="de-DE">Alle 5 Minuten - Für Shops mit stark schwankenden Preisen</name>
                </option>
                <option>
                    <id>900</id>
                    <name>Every 15 minutes - Recommended for dynamic pricing</name>
                    <name lang="de-DE">Alle 15 Minuten - Empfohlen für Shops mit dynamischer Preisgestaltung</name>
                </option>
                <option>
                    <id>1800</id>
                    <name>Every 30 minutes - For shops with frequent price changes</name>
                    <name lang="de-DE">Alle 30 Minuten - Für Shops mit häufigen Preisänderungen</name>
                </option>
                <option>
                    <id>3600</id>
                    <name>Every hour - For medium-sized shops</name>
                    <name lang="de-DE">Jede Stunde - Für mittelgroße Shops</name>
                </option>
                <option>
                    <id>43200</id>
                    <name>Twice daily - Morning and evening price sync</name>
                    <name lang="de-DE">Zweimal täglich - Morgens und abends ein Preisabgleich</name>
                </option>
                <option>
                    <id>86400</id>
                    <name>Once daily - For daily price updates</name>
                    <name lang="de-DE">Einmal täglich - Falls Preise nur einmal pro Tag aktualisiert werden müssen</name>
                </option>
            </options>
            <defaultValue>900</defaultValue>
        </input-field>
    </card>
</config>
