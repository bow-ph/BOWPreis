<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/platform/master/src/Core/System/SystemConfig/Schema/config.xsd">

    <card>
        <title>API Configuration</title>
        <title lang="de-DE">API-Konfiguration</title>

        <input-field type="password">
            <name>apiKey</name>
            <label>API Key</label>
            <label lang="de-DE">API-Schlüssel</label>
            <required>true</required>
        </input-field>
    </card>

    <card>
        <title>Mapping Einstellungen</title>
        <input-field type="single-select">
            <name>mappingMethod</name>
            <label>Mapping-Methode wählen</label>
            <options>
                <option>
                    <id>ean</id>
                    <name>EAN (empfohlen)</name>
                </option>
                <option>
                    <id>product_number</id>
                    <name>Produktnummer</name>
                </option>
            </options>
            <defaultValue>ean</defaultValue>
        </input-field>
    </card>

    <card>
        <title>Update Settings</title>
        <title lang="de-DE">Update-Einstellungen</title>

        <input-field type="single-select">
            <name>updateInterval</name>
            <label>Price Update Interval</label>
            <label lang="de-DE">Preis-Update-Intervall</label>
            <helpText>Select how often prices should be updated automatically</helpText>
            <helpText lang="de-DE">Wählen Sie aus, wie oft die Preise automatisch aktualisiert werden sollen</helpText>
            <options>
                <option>
                    <id>300</id>
                    <name>Every 5 minutes</name>
                    <name lang="de-DE">Alle 5 Minuten</name>
                </option>
                <option>
                    <id>900</id>
                    <name>Every 15 minutes</name>
                    <name lang="de-DE">Alle 15 Minuten</name>
                </option>
                <option>
                    <id>1800</id>
                    <name>Every 30 minutes</name>
                    <name lang="de-DE">Alle 30 Minuten</name>
                </option>
                <option>
                    <id>3600</id>
                    <name>Every hour</name>
                    <name lang="de-DE">Jede Stunde</name>
                </option>
                <option>
                    <id>43200</id>
                    <name>Twice daily</name>
                    <name lang="de-DE">Zweimal täglich</name>
                </option>
                <option>
                    <id>86400</id>
                    <name>Once daily</name>
                    <name lang="de-DE">Einmal täglich</name>
                </option>
            </options>
            <defaultValue>900</defaultValue>
        </input-field>
    </card>

    <card>
        <title>Notification Settings</title>
        <title lang="de-DE">Benachrichtigungseinstellungen</title>

        <input-field type="text">
            <name>adminEmail</name>
            <label>Admin Email</label>
            <label lang="de-DE">Admin E-Mail</label>
            <helpText>Email address for receiving error notifications</helpText>
            <helpText lang="de-DE">E-Mail-Adresse für Fehlerbenachrichtigungen</helpText>
            <required>true</required>
        </input-field>
    </card>

</config>
