<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true" autoconfigure="true" public="false">
            <bind key="$logger" type="service" id="logger"/>
        </defaults>

        <!-- Entity Definitions -->
        <service id="BOW\Preishoheit\Entity\Product\PreishoheitProductDefinition">
            <tag name="shopware.entity.definition" entity="bow_preishoheit_product" />
        </service>

        <service id="BOW\Preishoheit\Entity\PriceHistory\PriceHistoryDefinition">
            <tag name="shopware.entity.definition" entity="bow_preishoheit_price_history" />
        </service>

        <service id="BOW\Preishoheit\Entity\ErrorLog\ErrorLogDefinition">
            <tag name="shopware.entity.definition" entity="bow_preishoheit_error_log" />
        </service>

        <!-- Repositories -->
        <service id="bow_preishoheit_price_history.repository" class="Shopware\Core\Framework\DataAbstractionLayer\EntityRepository">
            <argument>BOW\Preishoheit\Entity\PriceHistory\PriceHistoryDefinition</argument>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Read\EntityReaderInterface"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\VersionManager"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Search\EntitySearcherInterface"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Search\EntityAggregatorInterface"/>
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="bow_preishoheit_error_log.repository" class="Shopware\Core\Framework\DataAbstractionLayer\EntityRepository">
            <argument>BOW\Preishoheit\Entity\ErrorLog\ErrorLogDefinition</argument>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Read\EntityReaderInterface"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\VersionManager"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Search\EntitySearcherInterface"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Search\EntityAggregatorInterface"/>
            <argument type="service" id="event_dispatcher"/>
        </service>

        <!-- Core Services -->
        <service id="BOW\Preishoheit\Service\ErrorHandling\ErrorHandler">
            <argument type="service" id="bow_preishoheit_error_log.repository"/>
        </service>

        <service id="BOW\Preishoheit\Service\Validation\PriceValidator">
            <argument type="service" id="logger"/>
        </service>

        <service id="BOW\Preishoheit\Service\Validation\BulkEditValidator">
            <argument type="service" id="product.repository"/>
        </service>





        <!-- API Services -->
        <service id="BOW\Preishoheit\Service\PreishoheitApi\PreishoheitApiClient" public="true">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="logger"/>
        </service>

        <!-- Mail Services -->
        <service id="BOW\Preishoheit\Service\Mail\FailedUpdateMailService">
            <argument type="service" id="bow_preishoheit_error_log.repository"/>
            <argument type="service" id="Shopware\Core\Content\Mail\Service\MailService"/>
            <argument>%env(SHOPWARE_ADMIN_EMAIL_PLUGINS)%</argument>
        </service>


        <!-- Scheduled Tasks -->
        <service id="BOW\Preishoheit\ScheduledTask\PriceUpdateTask">
            <tag name="shopware.scheduled.task" />
        </service>

        <service id="BOW\Preishoheit\ScheduledTask\PriceUpdateTaskHandler">
            <argument type="service" id="scheduled_task.repository"/>
            <argument type="service" id="BOW\Preishoheit\Service\PreishoheitApi\PriceUpdateService"/>
            <argument type="service" id="bow_preishoheit_product.repository"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="logger"/>
            <tag name="messenger.message_handler"/>
        </service>

        <!-- Price Services -->
        <service id="BOW\Preishoheit\Service\Price\PriceAdjustmentService" public="true">
            <argument type="service" id="logger"/>
        </service>

        <!-- Price Update Service -->
        <service id="BOW\Preishoheit\Service\PreishoheitApi\PriceUpdateService" public="true">
            <argument type="service" id="BOW\Preishoheit\Service\PreishoheitApi\PreishoheitApiClient"/>
            <argument type="service" id="product.repository"/>
            <argument type="service" id="bow_preishoheit_price_history.repository"/>
            <argument type="service" id="bow_preishoheit_error_log.repository"/>
            <argument type="service" id="BOW\Preishoheit\Service\Price\PriceAdjustmentService"/>
            <argument type="service" id="logger"/>
        </service>

        <service id="BOW\Preishoheit\Command\UpdatePricesCommand" public="true">
            <argument type="service" id="BOW\Preishoheit\Service\PreishoheitApi\PriceUpdateService"/>
            <argument type="service" id="bow_preishoheit_product.repository"/>
            <tag name="console.command"/>
        </service>

        <!-- NullTokenizer -->
        <service id="bow_preishoheit.search.null_tokenizer" class="BOW\Preishoheit\Search\NullTokenizer" decorates="Shopware\Core\Framework\DataAbstractionLayer\Search\Term\Tokenizer" public="false" decoration-inner-name="bow_preishoheit.search.null_tokenizer.inner"/>
    </services>
</container>
