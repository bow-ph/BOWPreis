{% block bow_preishoheit_list %}
<sw-page class="bow-preishoheit-list">
    <template #smart-bar-header>
        <h2>{{ $tc('bow-preishoheit.general.mainMenuItemGeneral') }}</h2>
    </template>

    <template #smart-bar-actions>
        <sw-button variant="primary" @click="refreshList">
            {{ $tc('global.default.refresh') }}
        </sw-button>
    </template>

    <template #content>
        <sw-entity-listing
            :items="products"
            :repository="productRepository"
            :columns="productColumns"
            :allowEdit="true"
            :allowDelete="true"
            :isLoading="isLoading"
            @refresh="refreshList"
            @page-change="onPageChange"
            @column-sort="onSortColumn"
            detailRoute="bow.preishoheit.detail"
        >
            <template #empty-state>
                <sw-empty-state
                    :title="$tc('bow-preishoheit.list.emptyStateTitle')"
                    :subtitle="$tc('bow-preishoheit.list.emptyStateSubtitle')"
                />
            </template>
        </sw-entity-listing>
    </template>
</sw-page>
{% endblock %}
