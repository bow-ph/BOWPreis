<div>
    <sw-page class="bow-preishoheit-job-list">
        <template #smart-bar-header>
            <h2>{{ $t('bow-preishoheit.jobs.pageTitle') }}</h2>
        </template>

        <sw-button @click="onRefresh" variant="primary" :disabled="isLoading">
            <sw-icon name="regular-sync"></sw-icon>
            {{ $t('bow-preishoheit.jobs.refreshButton') }}
        </sw-button>

        <sw-loader v-if="isLoading"></sw-loader>

        <!-- Empty state -->
        <div v-if="!isLoading && jobs.length === 0" class="sw-empty-state">
            <sw-icon name="regular-info-circle" size="48"></sw-icon>
            <h3>{{ $t('bow-preishoheit.jobs.emptyTitle') }}</h3>
            <p>{{ $t('bow-preishoheit.jobs.emptyDescription') }}</p>
        </div>

        <!-- Job list -->
        <sw-data-grid v-else :dataSource="jobs">
            <sw-data-grid-column property="id" label="ID"></sw-data-grid-column>
            <sw-data-grid-column property="status" label="Status"></sw-data-grid-column>
            <sw-data-grid-column property="createdAt" label="Created At"></sw-data-grid-column>
        </sw-data-grid>
    </sw-page>
</div>
