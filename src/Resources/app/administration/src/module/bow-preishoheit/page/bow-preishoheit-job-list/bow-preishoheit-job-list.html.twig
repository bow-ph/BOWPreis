<sw-page>
    <template #smart-bar-header>
        <h2>{{ $t('bow-preishoheit.jobs.pageTitle') }}</h2>
    </template>

    <template #smart-bar-actions>
        <sw-button variant="primary" @click="$router.push({ name: 'bow.preishoheit.jobCreate' })">
            <sw-icon name="regular-plus"></sw-icon>
            {{ $t('bow-preishoheit.jobs.createJobButton') }}
        </sw-button>
        <sw-button @click="onRefresh">
            <sw-icon name="regular-sync"></sw-icon>
            {{ $t('bow-preishoheit.jobs.refreshButton') }}
        </sw-button>
    </template>

    <sw-card-view>
        <sw-loader v-if="isLoading"></sw-loader>

        <sw-data-grid :dataSource="jobs" @row-click="openJobDetail">
            <sw-data-grid-column property="id" label="ID" primary></sw-data-grid-column>

            <sw-data-grid-column property="status" label="Status">
                <template #default="{ item }">
                    <sw-badge :variant="getBadgeVariant(item.status)">
                        {{ item.status }}
                    </sw-badge>
                </template>
            </sw-data-grid-column>

            <sw-data-grid-column property="createdAt" label="Erstellt am"></sw-data-grid-column>

            <template #emptyState>
                <sw-empty-state
                    :title="$t('bow-preishoheit.jobs.emptyTitle')"
                    :description="$t('bow-preishoheit.jobs.emptyDescription')">
                    <template #icon>
                        <sw-icon name="regular-info-circle" size="64"></sw-icon>
                    </template>
                    <template #actions>
                        <sw-button variant="primary" @click="$router.push({ name: 'bow.preishoheit.jobCreate' })">
                            {{ $t('bow-preishoheit.jobs.createFirstJob') }}
                        </sw-button>
                    </template>
                </sw-empty-state>
            </template>
        </sw-data-grid>
    </sw-card-view>
</sw-page>