{% block bow_preishoheit_history %}
    <div class="bow-preishoheit-history">
        <sw-card :title="$tc('bow-preishoheit.history.cardTitle')" :isLoading="isLoading">
            <sw-data-grid
                :dataSource="history"
                :columns="columns"
                :isLoading="isLoading"
                :page="page"
                :limit="limit"
                :total="total"
                :sortBy="sortBy"
                :sortDirection="sortDirection"
                :showSettings="true"
                @page-change="onPageChange"
                @sort-change="onSort">

                <template #cell-newPrice="{ item }">
                    <span :class="getPriceClass(item)">
                        {{ item.newPrice | currency }}
                    </span>
                </template>

                <template #empty-state>
                    <sw-empty-state
                        :title="$tc('bow-preishoheit.history.emptyStateTitle')"
                        :subtitle="$tc('bow-preishoheit.history.emptyStateSubtitle')">
                    </sw-empty-state>
                </template>

            </sw-data-grid>
        </sw-card>
    </div>
{% endblock %}
